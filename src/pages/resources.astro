---
import Layout from '../layouts/Layout.astro';
import { resources } from '../content/resources/data';
---

<Layout title="Resources" description="A curated list of developer tools & resources I recommend">
  <div class="mt-14 sm:mt-18">
    <div class="mx-auto max-w-7xl">
      <div class="relative px-4 sm:px-8 lg:px-12">
        <div class="mx-auto max-w-2xl lg:max-w-5xl">
          <header class="max-w-2xl">
            <h1 class="text-4xl font-bold tracking-tight text-zinc-800 dark:text-zinc-100 sm:text-5xl">
              Developer Resources
            </h1>
            <p class="mt-6 text-base text-zinc-600 dark:text-zinc-400">
              A curated list of developer tools & resources I recommend.
            </p>
          </header>

          <div class="mt-16 sm:mt-20">
            {Object.entries(resources).map(([category, items]) => (
              <div class="mb-16 last:mb-0">
                <h2 class="text-2xl font-bold tracking-tight text-zinc-800 dark:text-zinc-100 mb-8">
                  {category}
                </h2>
                <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
                  {items.map((resource) => (
                    <a
                      href={resource.link}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="group relative flex flex-col items-start rounded-2xl border border-zinc-100 p-6 dark:border-zinc-700/40 hover:bg-zinc-50 dark:hover:bg-zinc-800/50 transition"
                    >
                      <span class="relative z-10 text-sm font-medium text-sky-500 group-hover:text-sky-600 dark:text-sky-400 dark:group-hover:text-sky-300">
                        {resource.hostname}
                      </span>
                      <h3 class="mt-2 text-base font-semibold text-zinc-800 dark:text-zinc-100">
                        {resource.title}
                      </h3>
                      <p class="mt-2 text-sm text-zinc-600 dark:text-zinc-400">
                        {resource.description}
                      </p>
                      <div class="relative z-10 mt-4 flex items-center text-sm font-medium text-zinc-400 transition group-hover:text-sky-500 dark:text-zinc-200">
                        <svg
                          viewBox="0 0 24 24"
                          aria-hidden="true"
                          class="h-6 w-6 flex-none"
                        >
                          <path
                            d="M15.712 11.823a.75.75 0 1 0 1.06 1.06l-1.06-1.06Zm-4.95 1.768a.75.75 0 0 0 1.06-1.06l-1.06 1.06Zm-2.475-1.414a.75.75 0 1 0-1.06-1.06l1.06 1.06Zm4.95-1.768a.75.75 0 1 0-1.06 1.06l1.06-1.06Zm3.359.53-.884.884 1.06 1.06.885-.883-1.061-1.06Zm-4.95-2.12 1.414-1.415L12 6.344l-1.415 1.413 1.061 1.061Zm0 3.535a2.5 2.5 0 0 1 0-3.536l-1.06-1.06a4 4 0 0 0 0 5.656l1.06-1.06Zm4.95-4.95a2.5 2.5 0 0 1 0 3.535L17.656 12a4 4 0 0 0 0-5.657l-1.06 1.06Zm1.06-1.06a4 4 0 0 0-5.656 0l1.06 1.06a2.5 2.5 0 0 1 3.536 0l1.06-1.06Zm-7.07 7.07.176.177 1.06-1.06-.176-.177-1.06 1.06Zm-3.183-.353.884-.884-1.06-1.06-.884.883 1.06 1.06Zm4.95 2.121-1.414 1.414 1.06 1.06 1.415-1.413-1.06-1.061Zm0-3.536a2.5 2.5 0 0 1 0 3.536l1.06 1.06a4 4 0 0 0 0-5.656l-1.06 1.06Zm-4.95 4.95a2.5 2.5 0 0 1 0-3.535L6.344 12a4 4 0 0 0 0 5.656l1.06-1.06Zm-1.06 1.06a4 4 0 0 0 5.657 0l-1.061-1.06a2.5 2.5 0 0 1-3.535 0l-1.061 1.06Zm7.07-7.07-.176-.177-1.06 1.06.176.178 1.06-1.061Z"
                            fill="currentColor"
                          />
                        </svg>
                        <span class="ml-2">Visit site</span>
                      </div>
                      <span class="absolute inset-x-1 -bottom-px h-px bg-gradient-to-r from-sky-500/0 via-sky-500/40 to-sky-500/0 dark:from-sky-400/0 dark:via-sky-400/40 dark:to-sky-400/0"></span>
                      <span class="absolute inset-y-1 left-0 w-px bg-gradient-to-b from-sky-500/0 via-sky-500/40 to-sky-500/0 dark:from-sky-400/0 dark:via-sky-400/40 dark:to-sky-400/0"></span>
                    </a>
                  ))}
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
